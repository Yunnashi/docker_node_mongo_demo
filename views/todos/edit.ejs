<% layout('layouts/boilerplate') %>
<div class="row">
  <h1 class="text-center">ToDoの編集</h1>
  <div class="offset-3 col-6">
    <form action="/todos/<%= todo._id %>?_method=PUT" method="POST">
      <div class="mb-3">
        <label for="name" class="form-label">タイトル</label>
        <input
          class="form-control"
          type="text"
          name="name"
          id="name"
          placeholder="タイトル"
          value="<%= todo.name %>"
        />
      </div>
      <div class="mb-3">
        <label for="date" class="form-label">日付</label>
        <input
          class="form-control"
          type="date"
          name="date"
          id="date"
          placeholder="日付"
          value="<%= todo.date %>"
        />
      </div>
      <div class="mb-3">
        <label for="category" class="form-label">優先順位</label>
        <select class="form-select" name="category" id="category" value="<%= todo.category %>">
          <% for(let category of categories){ %>
            <option value="<%= category %>" <%= todo.category === category ? 'selected' : '' %>><%= category %></option>
            <% } %>
        </select>
      </div>
      <div class="mb-3">
        <label for="memo" class="form-label">メモ</label>
        <textarea
          class="form-control"
          name="memo"
          id="memo"
          cols="30"
          rows="5"
          placeholder="メモ"
        ><%= todo.memo %></textarea>
      </div>
      <div class="mb-3">
        <button class="btn btn-primary mr-5">登録</button>
        <a href="/todos/<%=todo.id %>" class="btn btn-outline-primary">戻る</a>
      </div>
    </form>
  </div>
</div>